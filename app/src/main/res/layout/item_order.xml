<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fl_order"
    android:background="@color/transparent"
    android:paddingBottom="@dimen/dp_13">

    <com.aries.ui.view.radius.RadiusLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_13"
        android:paddingTop="@dimen/dp_17"
        android:paddingEnd="@dimen/dp_13"
        android:paddingBottom="@dimen/dp_22"
        app:rv_backgroundColor="@color/white"
        app:rv_radius="@dimen/dp_7">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="@color/color_ff999999"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                tools:text="01" />

            <TextView
                android:id="@+id/tv_licensePlate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_15"
                android:layout_toStartOf="@+id/tv_amount"
                android:layout_toEndOf="@+id/tv_num"
                android:textColor="@color/color_ff1a1a1a"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold"
                tools:text="沪FHF227" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textColor="@color/color_ff0371f4"
                android:textSize="@dimen/sp_20"
                tools:text="已付:15.00元" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_marginEnd="@dimen/dp_10"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_startTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_round_blue"
                android:drawablePadding="@dimen/dp_14"
                android:ellipsize="end"
                android:gravity="start"
                android:includeFontPadding="false"
                android:lines="1"
                android:textSize="@dimen/sp_19"
                tools:text="2023-06-25 08:01:43" />

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="@dimen/dp_17"
                android:layout_marginStart="@dimen/dp_6"
                android:background="@color/color_ffcccccc" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_endTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_round_orange"
                android:drawablePadding="@dimen/dp_14"
                android:ellipsize="end"
                android:gravity="start"
                android:includeFontPadding="false"
                android:lines="1"
                android:textSize="@dimen/sp_19"
                tools:text="2023-06-25 08:01:43" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/ic_no"
                android:drawablePadding="@dimen/dp_11"
                android:textColor="@color/color_ff1a1a1a"
                android:textSize="@dimen/sp_19"
                tools:text="CN-007-025" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center"
                android:text="@string/详情"
                android:textColor="@color/color_ff666666"
                android:textSize="@dimen/sp_17" />
        </FrameLayout>

    </com.aries.ui.view.radius.RadiusLinearLayout>
</FrameLayout>