<?xml version="1.0" encoding="utf-8"?>
<com.aries.ui.view.radius.RadiusLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="@dimen/dp_20"
    android:paddingTop="@dimen/dp_24"
    android:paddingEnd="@dimen/dp_20"
    android:paddingBottom="@dimen/dp_20"
    app:rv_backgroundColor="@color/white_bg"
    app:rv_radius="@dimen/dp_27">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/color_ff666666"
        android:textSize="@dimen/sp_19"
        android:textStyle="bold"
        tools:text="title" />

    <ProgressBar
        android:id="@+id/pb_download"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_28"
        android:max="100"
        android:progress="0"
        android:progressDrawable="@drawable/layerlist_download_pb"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_28"
        android:orientation="horizontal">

        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/rtv_left"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_38"
            android:layout_marginEnd="@dimen/dp_8"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/取消"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            app:rv_radius="@dimen/dp_8"
            app:rv_strokeColor="@color/black"
            app:rv_strokeWidth="@dimen/dp_05" />

        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/rtv_right"
            android:layout_width="0dp"
            android:layout_height="@dimen/dp_38"
            android:layout_marginStart="@dimen/dp_8"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/确定"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_16"
            app:rv_backgroundColor="@color/color_ff0371f4"
            app:rv_radius="@dimen/dp_8" />
    </LinearLayout>

</com.aries.ui.view.radius.RadiusLinearLayout>