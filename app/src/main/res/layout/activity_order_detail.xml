<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffe8eef6"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_deep_top_bg" />

    <include
        android:id="@+id/layout_toolbar"
        layout="@layout/layout_comment_toolbar" />

    <com.aries.ui.view.radius.RadiusFrameLayout
        android:id="@+id/rfl_plate"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_67"
        android:layout_below="@+id/layout_toolbar"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginEnd="@dimen/dp_13"
        app:rv_backgroundColor="@color/white"
        app:rv_radius="@dimen/dp_7">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="@dimen/dp_13"
            android:drawableStart="@mipmap/ic_plate"
            android:drawablePadding="@dimen/dp_13"
            android:textColor="@color/color_ff1a1a1a"
            android:textSize="@dimen/sp_24"
            android:textStyle="bold"
            tools:text="沪A36N81" />

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/dp_13"
            tools:text="15元" />
    </com.aries.ui.view.radius.RadiusFrameLayout>

    <com.aries.ui.view.radius.RadiusLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rfl_plate"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginTop="@dimen/dp_3"
        android:layout_marginEnd="@dimen/dp_13"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp_13"
        android:paddingTop="@dimen/dp_10"
        android:paddingEnd="@dimen/dp_13"
        android:paddingBottom="@dimen/dp_10"
        app:rv_backgroundColor="@color/white"
        app:rv_radius="@dimen/dp_7">

        <TextView
            android:id="@+id/tv_orderNo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            tools:text="订单：202308080CN007008000348" />

        <TextView
            android:id="@+id/tv_berth"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            tools:text="订单：202308080CN007008000348" />

        <TextView
            android:id="@+id/tv_street"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            tools:text="订单：202308080CN007008000348" />

        <TextView
            android:id="@+id/tv_startTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            tools:text="订单：202308080CN007008000348" />

        <TextView
            android:id="@+id/tv_endTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            tools:text="订单：202308080CN007008000348" />

        <TextView
            android:id="@+id/tv_totalTime"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            tools:text="订单：202308080CN007008000348" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="1"
            tools:text="订单：202308080CN007008000348" />
    </com.aries.ui.view.radius.RadiusLinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/dp_13"
        android:layout_marginEnd="@dimen/dp_13"
        android:layout_marginBottom="@dimen/dp_13"
        android:orientation="horizontal">

        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/rtv_debtCollection"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/dp_6"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/欠费追缴"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_19"
            android:textStyle="bold"
            app:rv_backgroundColor="@color/color_ffffa906"
            app:rv_radius="@dimen/dp_7" />

        <com.aries.ui.view.radius.RadiusTextView
            android:id="@+id/rtv_transactionRecord"
            android:layout_width="@dimen/dp_0"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_6"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/交易记录"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_19"
            android:textStyle="bold"
            app:rv_backgroundColor="@color/color_ff0371f4"
            app:rv_radius="@dimen/dp_7" />
    </LinearLayout>
</RelativeLayout>