<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_color"
    android:layout_width="@dimen/dp_45"
    android:layout_height="@dimen/dp_45"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_8"
        tools:src="@mipmap/ic_plate_blue" />

    <com.aries.ui.view.radius.RadiusFrameLayout
        android:id="@+id/rfl_stroke"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/dp_4"
        app:rv_backgroundColor="@color/transparent"
        app:rv_radius="@dimen/dp_1"
        app:rv_strokeColor="@color/color_ffea9a00"
        app:rv_strokeWidth="@dimen/dp_1" />

    <ImageView
        android:id="@+id/iv_hook"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_gravity="end"
        android:src="@mipmap/ic_yellow_hook" />
</FrameLayout>